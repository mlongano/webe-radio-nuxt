
@baseUrl = http://api.webe.radio:1337/graphql
###
POST {{baseUrl}} HTTP/1.1
Content-Type: application/json
X-REQUEST-TYPE: GraphQL

query Episodes {
  episodes {
    id
    title
    slug
    episode_number
    date
    description
    spreaker_id
    tags {
      name
    }
    cover {
      url
      width
      height
    }
    audio {
      url
    }
    podcast {
      id
      title
      slug
    }
  }
}

